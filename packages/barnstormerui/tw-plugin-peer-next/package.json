{
    "name": "@barnstormer/tw-plugin-peer-next",
    "description": "BarnstormerUI peer-next plugin for Tailwind",
    "version": "1.0.0",
    "license": "MIT",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.umd.js"
        },
        "./*": "./*"
    },
    "source": "index.ts",
    "main": "dist/index.mjs",
    "unpkg": "dist/index.umd.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev-only": "vite build --watch",
        "build:peer-next": "vite build"
    },
    "devDependencies": {
        "typescript": "^4.9.5",
        "vite": "^4.3.0",
        "vite-plugin-dts": "^2.0.0-beta.1"
    },
    "peerDependencies": {
        "tailwindcss": ">=3.0.0 || >= 3.0.0-alpha.1"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "homepage": "https://docs.barnstormer.com/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pointer0592/barnstormer.git",
        "directory": "packages/barnstormerui/tw-plugin-peer-next"
    },
    "bugs": {
        "url": "https://github.com/pointer0592/barnstormer/issues"
    }
}
